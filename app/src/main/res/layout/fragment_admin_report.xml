<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="32dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit a Report"
            android:textColor="#0F172A"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="28dp"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_container_bg"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginBottom="32dp"
            android:elevation="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#475569"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter report title"
                android:background="@drawable/form_input_bg"
                android:padding="14dp"
                android:textColor="#1E293B"
                android:textColorHint="#94A3B8"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#475569"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Describe the report"
                android:background="@drawable/form_input_bg"
                android:gravity="top|start"
                android:padding="14dp"
                android:textColor="#1E293B"
                android:textColorHint="#94A3B8"
                android:inputType="textMultiLine"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report Type"
                android:textColor="#475569"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/etReportType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter report type"
                android:background="@drawable/form_input_bg"
                android:padding="14dp"
                android:textColor="#1E293B"
                android:textColorHint="#94A3B8"
                android:layout_marginBottom="28dp" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/form_button_bg"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
