<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_header_gradient"
    android:paddingTop="100dp">

    <!-- Company Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/logo_rounded_bg"
        android:clipToOutline="true"
        android:contentDescription="Company Logo"
        android:elevation="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/company_logo" />

    <!-- Welcome Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="24dp" />

    <!-- White Card Container -->
    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/card_white_rounded"
        android:backgroundTint="@null"
        android:backgroundTintMode="src_in"
        android:clipChildren="false"
        android:clipToOutline="true"
        android:clipToPadding="false"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/form_input_bg"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:textColor="#1E293B"
            android:textColorHint="#94A3B8" />

        <!-- Password -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/form_input_bg"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="14dp"
            android:textColor="#1E293B"
            android:textColorHint="#94A3B8" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/form_button_bg"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Forgot Password (Optional) -->
        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="Forgot Password?"
            android:textColor="#475569"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
