<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="28dp"
        android:paddingVertical="32dp"
        android:gravity="center_horizontal">

        <!-- Page Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit a Service Request"
            android:textColor="#0F172A"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="28dp"
            android:textAlignment="center" />

        <!-- Form Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_container_bg"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginBottom="32dp"
            android:elevation="6dp">

            <!-- Client Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Client Name"
                android:textColor="#475569"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/clientNameEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter your full name"
                android:background="@drawable/form_input_bg"
                android:padding="14dp"
                android:textColor="#1E293B"
                android:textColorHint="#94A3B8"
                android:inputType="textPersonName"
                android:layout_marginBottom="20dp" />

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#475569"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/descriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:hint="Describe your issue or request"
                android:background="@drawable/form_input_bg"
                android:gravity="top|start"
                android:padding="14dp"
                android:textColor="#1E293B"
                android:textColorHint="#94A3B8"
                android:layout_marginBottom="20dp"
                android:inputType="textMultiLine" />

            <!-- Image URL -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Image URL (Optional)"
                android:textColor="#475569"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/imageUrlEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="https://example.com/image.jpg"
                android:background="@drawable/form_input_bg"
                android:padding="14dp"
                android:textColor="#1E293B"
                android:textColorHint="#94A3B8"
                android:inputType="textUri"
                android:layout_marginBottom="28dp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Submit Request"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/form_button_bg"
                android:layout_marginTop="6dp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
