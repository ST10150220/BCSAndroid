<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:padding="16dp">

    <!-- Task Input -->
    <EditText
        android:id="@+id/etTask"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter the Tasks name"
        android:padding="14dp"
        android:background="@drawable/form_input_bg"
        android:textColor="#1E293B"
        android:textColorHint="#94A3B8"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etContractor"
        android:layout_marginBottom="24dp"/>

    <!-- Contractor Input -->
    <EditText
        android:id="@+id/etContractor"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Please enter your Name"
        android:padding="14dp"
        android:background="@drawable/form_input_bg"
        android:textColor="#1E293B"
        android:textColorHint="#94A3B8"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/etTask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSelectFiles"
        android:layout_marginBottom="24dp"/>

    <!-- Select Files Button -->
    <Button
        android:id="@+id/btnSelectFiles"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="Select Files"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/form_button_bg"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/etContractor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvSelectedFiles"
        android:layout_marginBottom="24dp"/>

    <!-- Selected Files Display -->
    <TextView
        android:id="@+id/tvSelectedFiles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Selected File"
        android:textColor="#475569"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:padding="12dp"
        android:background="@drawable/form_input_bg"
        app:layout_constraintTop_toBottomOf="@id/btnSelectFiles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnUpload"
        android:layout_marginBottom="24dp"/>

    <!-- Upload Button -->
    <Button
        android:id="@+id/btnUpload"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="Upload"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/form_button_bg"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedFiles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
